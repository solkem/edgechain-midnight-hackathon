{
  "name": "@edgechain/contract",
  "version": "0.1.0",
  "license": "MIT",
  "type": "module",
  "main": "index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "packageManager": "yarn@4.9.2",
  "exports": {
    ".": {
      "default": "./dist/index.js",
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts",
      "require": "./dist/index.js"
    },
    "./dist/managed/edgechain/contract/index.cjs": {
      "default": "./dist/managed/edgechain/contract/index.cjs",
      "require": "./dist/managed/edgechain/contract/index.cjs"
    }
  },
  "scripts": {
    "compact": "compact compile src/edgechain.compact ./src/managed/edgechain",
    "compact:arduino": "compact compile src/arduino-iot.compact ./src/managed/arduino-iot",
    "build": "rm -rf dist && find src/managed -type d -empty -delete && tsc --project tsconfig.build.json && mkdir -p dist/managed && test -d ./src/managed/edgechain && cp -R ./src/managed/edgechain ./dist/managed/ && test -d ./src/managed/arduino-iot && cp -R ./src/managed/arduino-iot ./dist/managed/ && mkdir -p ./dist/managed/edgechain/keys ./dist/managed/edgechain/zkir && mkdir -p ./dist/managed/arduino-iot/keys ./dist/managed/arduino-iot/zkir && cp ./src/*.compact dist",
    "build:ts": "tsc --project tsconfig.json",
    "deploy": "npm run build:ts && node dist/deploy-simple.js",
    "deploy:arduino": "npm run build:ts && node dist/deploy-arduino.js",
    "view-contract": "npm run build:ts && node dist/view-contract.js",
    "lint": "eslint src",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "prepack": "yarn build"
  },
  "devDependencies": {
    "eslint": "^9.27.0",
    "jest": "^29.7.0",
    "typescript": "^5.8.2"
  }
}
